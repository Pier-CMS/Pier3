Class {
	#name : #PRAutoGeneratedDocumentationKernelDistribution,
	#superclass : #PRAbstractKernelDistribution,
	#category : #'Pier-Kernel-Distributions'
}

{ #category : #testing }
PRAutoGeneratedDocumentationKernelDistribution class >> isAbstract [ 
	^ false
]

{ #category : #accessing }
PRAutoGeneratedDocumentationKernelDistribution class >> label [
	^ 'Auto Generated Pier Docs'
]

{ #category : #accessing }
PRAutoGeneratedDocumentationKernelDistribution class >> thumbnail [
	^ PRKernelDistributionFileLibrary / #autogeneratedDocumentationPng
]

{ #category : #creation }
PRAutoGeneratedDocumentationKernelDistribution >> showCustomizeUIOn: calleeComponent thenAddRootToKernel:  theKernel [
	calleeComponent twbsInform: [ :r | 
		r text: 'The documentation is autogenerated from the comments in the source code of pier, a sort of poor mans documentation.'; break; break.
		r strong: 'Note: '; text: 'Be patient it could take a while to traverse all the classes and to parse the source.' ]. 

	theKernel root: PRPierFrame exampleDocumentationRoot.
	^ theKernel

	
]
